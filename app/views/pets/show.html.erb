<%= content_for(:title, "Show Pet | Pet Finder" ) %>

<% if @pet.lost == true %>
  <p><h1>Reported Lost:</h1></p>
<% else %>
  <p><h1>Reported Found:</h1></p>
<% end %>
</h1>

<%if @pet.avatar.present? %>
    <p><%= image_tag @pet.avatar.url(:large) %></p>
  <%else%>
      <%= image_tag("No_image_available.png", height: '15%', width: '15%') %>
  <%end%>
<h3>Species:  <%= @pet.species %> </h3>
<br>
<h3>Breed:  <%= @pet.breed %> </h3>

<h3>Description:  <%= @pet.description %> </h3>

<h3>Color:  <%= @pet.color %> </h3>

<h3>Location:  <%= @pet.loc_lost %> </h3>

<br>
  <% if @pet.lost != true %>
    <p><%=link_to "Do you know who I belong to?", pets_path, :class => "btn btn-danger"  %> +Need to add contact page</p>

  <% else%>
    <p><%=link_to "Have you seen me?", pets_path, :class => "btn btn-danger"  %> +Need to add contact
  <%end%>
  <p><%=link_to "Return to pet index", pets_path, :class => "btn btn-danger"  %></p>

  <% if can? :edit, @pet %>
    <p><%= link_to "Edit This Listing", edit_pet_path, :class => "btn btn-danger"  %></p>
  <%end%>
  <% if can? :destroy, @pet %>
    <p><%= link_to "Delete This Listing", pet_path(@pet),
                           :data => {:confirm => "You sure?",
                                     :method => "delete"},
                           :class => "btn btn-danger" %></p>
  <%end%>
