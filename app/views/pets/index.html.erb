<h1>Here is a list of lost and found pets</h1>

<h2>Lost pets</h2>

<ul>
<% @pets.each do |pet| %>
  <%if pet.lost == true %>
   <%if pet.avatar.present? %>
    <p><a href="/pets/<%= pet.id %>"><%= image_tag pet.avatar.url(:medium) %> </a> </p>
  <%else%>
       <a href="/pets/<%= pet.id %>"><%= image_tag("No_image_available.png", height: '15%', width: '15%') %> </a>
  <%end%>

  <li>
    <p> Pet type: <a href="/pets/<%= pet.id %>"><%= pet.species %></a>, "<%= pet.breed %>"
    <br> Pet description: <%=pet.description%>
    <br> Last seen at: <%=pet.loc_lost%>:  <em><%=pet.created_at.time.to_formatted_s(:long)%></em>
  </li>
  <%end%>
<% end %>
</ul>

<br>

<h2>Found pets</h2>

<ul>
<% @pets.each do |pet| %>
  <%if pet.lost != true %>

  <%if pet.avatar.present? %>
    <p><a href="/pets/<%= pet.id %>"><%= image_tag pet.avatar.url(:medium) %></a></p>
  <%else%>
      <a href="/pets/<%= pet.id %>"><%= image_tag("No_image_available.png", height: '15%', width: '15%') %> </a>
  <%end%>
  <li>
    <p> Pet type: <a href="/pets/<%= pet.id %>"><%= pet.species %></a>, "<%= pet.breed %>"
    <br> Pet description: <%=pet.description%>
    <br> Found at: <%=pet.loc_lost%>: <%=pet.loc_lost%>:  <em><%=pet.created_at.time.to_formatted_s(:long)%></em>
  </li>
  <% end %>
<% end %>
</ul>

