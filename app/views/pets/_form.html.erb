<%= form_for @pet do |f| %>
  <div class="form-group">
    <%= f.select :species, [['Dog'], ['Cat'], ['Bird'], ['Reptile'], ['Other - Please Describe']] %>
  </div><br>

  <div class="form-group">
    <%= f.label :breed %>
    <%= f.text_field :breed %>
  </div><br>
    <div class="form-group">
    <%= f.label :color %>
    <%= f.text_field :color %>
  </div><br>

  <div class="form-group">
    <%= f.select :loc_lost, [['Area Last Seen'], ['Central'], ['North-East'], ['North-West'], ['South-East'], ['South-West']]  %>
   </div><br>

  <div class="form-group">
    <%= f.label :Lost? %>
    <%= f.radio_button :lost, "1" %>
  </div>

  <div class="form-group">
    <%= f.label :Found? %>
    <%= f.radio_button :lost, "0" %>
  </div><br>


  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :size => "54"  %><br>
  </div><br><br>

  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
